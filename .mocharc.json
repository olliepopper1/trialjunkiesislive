{
  "extension": ["cjs"],
  "spec": "tests/**/*.test.cjs",
  "file": ["./tests/config/setup.cjs"],
  "require": [
    "ts-node/register",
    "dotenv/config",
    "./tests/config/register.cjs"
  ],
  "recursive": true,
  "exit": true,
  "timeout": 10000,
  "reporter": "spec",
  "ignore": ["node_modules"],
  "watch-files": ["tests/**/*.test.cjs", "src/**/*.cjs"]
}
